<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2 search-bar-title">搜尋餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->

<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this._category}}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer py-3">
            <div class="row justify-content-center">
              <a class="text-decoration-underline col-lg-3 col-10 my-1 mx-1"
                href="/restaurants/{{this._id}}/edit">Edit</a>
              <!-- restaurants 資料庫的編號屬性為 _id -->
              <a class="text-decoration-underline col-lg-3 col-10 my-1 mx-1" href="/restaurants/{{this._id}}">Detail</a>
              <form class="col-lg-5 col-10 my-1 p-0">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-sm btn-danger col-12" data-toggle="modal"
                  data-target="#trigger-deleteItem-{{this._id}}">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>