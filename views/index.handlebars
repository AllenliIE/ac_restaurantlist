<!-- ./views/index.handlebars -->
<div class="container mt-5">
  <!-- search bar -->
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="Enter movie name to search..."
            value="{{keyword}}" aria-label="Movie Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- restaurant list -->
  <div class="row" id="data-panel">
    {{#each restaurants}}
    <div class="col-md-4">
      <a class="text-decoration-none" href="/restaurants/{{this.id}}" class="text-secondary ">
        <div class="card mb-2 w-100 h-100">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
          <div class="card-body restaurant-item-body">
            <h5 class="card-title text-primary text-start">{{this.name}}</h5>
            <h6 class="card-title text-primary text-start">♨{{this.category}}</h6>
            <h6 class="card-title text-start">★{{this.rating}}</h6>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>